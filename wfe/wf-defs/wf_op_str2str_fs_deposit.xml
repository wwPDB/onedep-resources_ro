<?xml version="1.0" encoding="UTF-8"?>
<wf:wwPDBworkflow xmlns:wf="http://pdbml.wwpdb.org/schema-wf" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://pdbml.wwpdb.org/schema-wf wwpdb-workflow-v100.xsd">
    <wf:metadata>
        <wf:version major="1.0" author="my" date="06-12-2019" id="STR2STR_DEP" name="wf_op_str2str_fs_deposit.xml"/>
        <wf:description>
            <wf:short>Convert NMR-STAR V3.2 to NMR-STAR V3.2 (deposit)</wf:short>
            <wf:subtext>Deposition system file conversion workflow</wf:subtext>
        </wf:description>
    </wf:metadata>

    <wf:workflow>
        <wf:dataObjects>
            <wf:dataObject dataID="D1" name="nmr-unified-data-file" type="string" container="list" mutable="true" >
                <wf:description>NMR unified data file: NMR-STAR V3.2 (latest version)</wf:description>
                <wf:location where="deposit" content="nmr-unified-data-str" format="nmr-star" version="latest" />
            </wf:dataObject>
            <wf:dataObject dataID="D2" name="pdbxmodelfile" type="string" container="list" mutable="true" >
                <wf:description>PDBx format model data file (latest version)</wf:description>
                <wf:location where="deposit" content="model" format="pdbx" version="latest" />
            </wf:dataObject>
            <wf:dataObject dataID="D3" name="str-consistency-log" type="string" container="list" mutable="true" >
                <wf:description>NMR-STAR V3.2 consistency log (next version)</wf:description>
                <wf:location where="deposit" content="nmr-unified-data-report" format="json" version="next" />
            </wf:dataObject>

            <wf:dataObject dataID="D4" name="nmr-unified-data-file" type="string" container="list" mutable="true" >
                <wf:description>NMR unified data file: NMR-STAR V3.2 (next version)</wf:description>
                <wf:location where="deposit" content="nmr-unified-data-str" format="nmr-star" version="next" />
            </wf:dataObject>
            <wf:dataObject dataID="D5" name="str-deposit-log" type="string" container="list" mutable="true" >
                <wf:description>NMR-STAR V3.2 deposit log (next version)</wf:description>
                <wf:location where="deposit" content="nmr-unified-data-report" format="json" version="next" />
            </wf:dataObject>

        </wf:dataObjects>

        <wf:flow>
            <wf:entryPoint taskID="T1" name="Start" nextTask="T2" breakpoint="false">
                <wf:description>Process entry point</wf:description>
            </wf:entryPoint>

            <wf:tasks>

                <wf:task taskID="T2" name="str-consistency-check" nextTask="T7" breakpoint="false" exceptionID="EX0" reference="str-consistency-check">
                    <wf:description>NMR-STAR V3.2 consistency check</wf:description>
                    <wf:process runTime="00:00:10" failTime="00:05:20">
                        <wf:detail name="str-consistency-check" action="nmr-str-consistency-check" where="api"/>
                        <wf:dataObjectsLocation>
                            <wf:location dataID="D1" type="input"/>
                            <wf:location dataID="D2" type="input"/>
                            <wf:location dataID="D3" type="output"/>
                        </wf:dataObjectsLocation>
                    </wf:process>
                </wf:task>

                <wf:task taskID="T7" name="str2str-conversion" nextTask="T8" breakpoint="false" exceptionID="EX0" reference="str2str-conversion">
                    <wf:description>NMR-STAR V3.2 -> NMR-STAR V3.2 conversion and deposition</wf:description>
                    <wf:process runTime="00:00:10" failTime="00:05:20">
                        <wf:detail name="str2str-conversion" action="nmr-str2str-deposit" where="api"/>
                        <wf:dataObjectsLocation>
                            <wf:location dataID="D1" type="input"/>
                            <wf:location dataID="D2" type="input"/>
                            <wf:location dataID="D4" type="output"/>
                            <wf:location dataID="D5" type="output"/>
                        </wf:dataObjectsLocation>
                    </wf:process>
                </wf:task>

                <!-- Final task -->
                <wf:task taskID="T8" name="Finish" nextTask="T9" breakpoint="false" exceptionID="EX0" reference="Finish">
                   <wf:description>Mark the WF as completed</wf:description>
                   <wf:process runTime="00:00:01" failTime="00:00:20">
                      <wf:detail name="finished" action="finished" where="wfe"/>
                   </wf:process>
                </wf:task>

            </wf:tasks>

            <wf:exitPoint taskID="T9" name="End" breakpoint="false" reference="exit">
                <wf:description>Last point in the workflow</wf:description>
            </wf:exitPoint>

            <wf:exception taskID="EX0" name="Exception handler" >
                <wf:description>Default unhandled exception - will mark instance data with exception.</wf:description>
            </wf:exception>

        </wf:flow>

    </wf:workflow>

</wf:wwPDBworkflow>
